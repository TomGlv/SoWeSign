<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emargement.controller.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" spacing="20.0">
            <children>
                <Label styleClass="label-white" text="SoWeSign - Connexion">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" prefHeight="250.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #465f7c; -fx-padding: 30; -fx-background-radius: 8;">
                    <children>
                        <Label styleClass="label-white" text="Identifiant">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="loginField" maxWidth="250.0" promptText="Entrez votre identifiant" />

                        <Label styleClass="label-white" text="Mot de passe">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Entrez votre mot de passe" />

                        <Button onAction="#handleLoginButtonAction" prefWidth="250.0" styleClass="button" id="generate-button" text="Se connecter">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>

                        <Label fx:id="errorMessageLabel" styleClass="label-white" textFill="#e74c3c" visible="false" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>