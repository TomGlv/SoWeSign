<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emargement.controller.DashboardEtudiantController">
    <children>
        <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" styleClass="hbox-header" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="welcomeLabel" styleClass="label-white" text="Bienvenue, Étudiant [Nom]">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <Button onAction="#handleLogout" styleClass="button" id="logout-button" text="Déconnexion">
                                    <HBox.margin>
                                        <Insets right="20.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <VBox alignment="CENTER" spacing="40.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-white" text="Émargement Rapide">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>

                        <VBox alignment="CENTER" prefWidth="450.0" spacing="20.0" style="-fx-background-color: #465f7c; -fx-padding: 40; -fx-background-radius: 8;">
                            <children>
                                <Label styleClass="label-white" text="Veuillez entrer le code de la séance fourni par le professeur :">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="codeInputField" maxWidth="300.0" promptText="Code à 6 chiffres/lettres" />

                                <Button onAction="#handleEmargerAction" prefWidth="300.0" styleClass="button" id="generate-button" text="Émarger">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Button>

                                <Label fx:id="statusLabel" styleClass="label-white" text="Status : En attente du code..." wrapText="true">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>