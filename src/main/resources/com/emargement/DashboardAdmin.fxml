<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<VBox alignment="TOP_CENTER" spacing="30.0" styleClass="admin-dashboard" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emargement.controller.DashboardAdminController">
    <padding>
        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
    </padding>

    <Label text="Tableau de Bord Administrateur" styleClass="title-label">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>

    <Label fx:id="welcomeLabel" text="Bienvenue, Administrateur." styleClass="welcome-label" />

    <VBox alignment="CENTER" spacing="20.0" styleClass="action-box">
        <Label text="Action Principale" styleClass="action-title" />

        <Button text="Gérer les Utilisateurs" onAction="#handleManageUsers" prefWidth="300.0" prefHeight="50.0" styleClass="primary-button" />
    </VBox>

    <VBox spacing="10.0" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" styleClass="activity-box">
        <Label text="Journal d'activité :" styleClass="activity-title" />
        <Label text="Aucune activité récente." styleClass="activity-text" />
    </VBox>

    <Button text="Déconnexion" onAction="#handleLogout" prefWidth="200.0" prefHeight="45.0" styleClass="logout-button" />

    <stylesheets>
        <String fx:value="/com/emargement/admin-styles.css" />
    </stylesheets>
</VBox>