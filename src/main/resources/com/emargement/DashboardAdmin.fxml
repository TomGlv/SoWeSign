<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emargement.controller.DashboardAdminController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Tableau de Bord Administrateur" textFill="#2a5058">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label fx:id="welcomeLabel" text="Bienvenue, Administrateur." style="-fx-font-size: 16px; -fx-text-fill: #4CAF50;" />

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Actions rapides : " />
        <Button text="Gérer les Utilisateurs" onAction="#handleManageUsers" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Voir les Statistiques" onAction="#handleViewStats" style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
    </HBox>

    <VBox spacing="10.0">
        <Label text="Journal d'activité :" style="-fx-font-weight: bold;" />
        <Label text="Aucune activité récente." style="-fx-text-fill: gray;" />
    </VBox>

    <Button text="Déconnexion" onAction="#handleLogout" style="-fx-background-color: #F44336; -fx-text-fill: white;" />

</VBox>